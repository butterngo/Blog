<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Buttervn</title>

    <environment names="Development">
        <link href="~/css/font-awesome.min.css" rel="stylesheet">
        <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="~/vendor/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/bo/Site.css" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/css/font-awesome.min.css" rel="stylesheet">
        <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/vendor/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/bo/Site.css" />
    </environment>
</head>
<body>
    @Html.Partial("_Header")
    <div>
        <div style="float:left; margin-right:5px; margin-left:5px;">@Html.Partial("_LeftPanel")</div>
        <div style="float:left;">@RenderBody()</div>
        <div style="clear:both;"></div>
    </div>
    <environment names="Development">
        <script src="~/vendor/js/jquery.js"></script>
        <script src="~/vendor/js/bootstrap.js"></script>
        <script type="text/javascript" src="~/vendor/js/jquery.validate.min.js"></script>
        <script type="text/javascript" src="~/vendor/js/jquery.validate.unobtrusive.min.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/vendor/js/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/vendor/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script type="text/javascript" src="~/vendor/js/jquery.validate.min.js"></script>
        <script type="text/javascript" src="~/vendor/js/jquery.validate.unobtrusive.min.js"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
